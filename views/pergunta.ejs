<%- include partials/header.ejs %>
<body>
    <%- include partials/navbar.ejs %>
    <div class="container">
        <hr />
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.desc %></p>
        <div class="card mt-4">
            <div class="card-reader">
                <h3>Realizar Pergunta</h3>
            </div>
            <div class="card-body">
                <form action="/responder" method="post">
                    <label>Resposta: </label>
                    <textarea
                        name="corpo"
                        placeholder="Responda aqui"
                        class="form-control"
                    ></textarea>
                    <input
                        type="hidden"
                        name="pergunta"
                        value="<%= pergunta.id %>"
                    />
                    <button type="submit" class="btn btn-primary mt-2">
                        Responder
                    </button>
                </form>
                <hr />
                <h3>Respostas</h3>
                <hr />
                <% respostas.forEach(resposta=> {%> <%= resposta.corpo %> <%})%>
            </div>
        </div>
    </div>
</body>
<%- include partials/footer.ejs %>
